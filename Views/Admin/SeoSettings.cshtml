@model SadiclarasanWeb.Models.SeoSettings
@{
    ViewData["Title"] = "SEO Ayarları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-search me-2"></i>SEO Ayarları</h2>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Genel SEO Ayarları</h5>
            </div>
            <div class="card-body">
                <form asp-action="SeoSettings" method="post">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="SiteTitle" class="form-label">
                                <i class="fas fa-heading me-1"></i>Site Başlığı
                            </label>
                            <input asp-for="SiteTitle" class="form-control" placeholder="Site başlığınızı girin">
                            <div class="form-text">Bu başlık tarayıcı sekmesinde ve arama sonuçlarında görünür.</div>
                            <span asp-validation-for="SiteTitle" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label asp-for="SiteDescription" class="form-label">
                                <i class="fas fa-align-left me-1"></i>Site Açıklaması
                            </label>
                            <textarea asp-for="SiteDescription" class="form-control" rows="3" placeholder="Site açıklamanızı girin"></textarea>
                            <div class="form-text">Bu açıklama arama sonuçlarında görünür. 150-160 karakter arası olmalı.</div>
                            <span asp-validation-for="SiteDescription" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label asp-for="SiteKeywords" class="form-label">
                                <i class="fas fa-tags me-1"></i>Anahtar Kelimeler
                            </label>
                            <input asp-for="SiteKeywords" class="form-control" placeholder="anahtar, kelime, listesi">
                            <div class="form-text">Virgülle ayırarak anahtar kelimelerinizi girin.</div>
                            <span asp-validation-for="SiteKeywords" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label asp-for="SiteUrl" class="form-label">
                                <i class="fas fa-link me-1"></i>Site URL'si
                            </label>
                            <input asp-for="SiteUrl" class="form-control" placeholder="https://www.siteniz.com">
                            <div class="form-text">Ana domain adresinizi girin.</div>
                            <span asp-validation-for="SiteUrl" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label asp-for="OgImage" class="form-label">
                                <i class="fas fa-image me-1"></i>Sosyal Medya Görseli
                            </label>
                            <input asp-for="OgImage" class="form-control" placeholder="https://www.siteniz.com/images/og-image.jpg">
                            <div class="form-text">Sosyal medyada paylaşıldığında görünecek görsel URL'si.</div>
                            <span asp-validation-for="OgImage" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="my-4">
                    
                    <h6 class="text-primary mb-3"><i class="fas fa-chart-line me-2"></i>Analitik Kodları</h6>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="GoogleAnalyticsId" class="form-label">
                                <i class="fab fa-google me-1"></i>Google Analytics ID
                            </label>
                            <input asp-for="GoogleAnalyticsId" class="form-control" placeholder="G-XXXXXXXXXX">
                            <div class="form-text">Google Analytics takip kodu.</div>
                            <span asp-validation-for="GoogleAnalyticsId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="GoogleSearchConsole" class="form-label">
                                <i class="fas fa-search-plus me-1"></i>Google Search Console
                            </label>
                            <input asp-for="GoogleSearchConsole" class="form-control" placeholder="google-site-verification=...">
                            <div class="form-text">Google Search Console doğrulama kodu.</div>
                            <span asp-validation-for="GoogleSearchConsole" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="FacebookPixelId" class="form-label">
                                <i class="fab fa-facebook me-1"></i>Facebook Pixel ID
                            </label>
                            <input asp-for="FacebookPixelId" class="form-control" placeholder="123456789012345">
                            <div class="form-text">Facebook Pixel takip kodu.</div>
                            <span asp-validation-for="FacebookPixelId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="TwitterCard" class="form-label">
                                <i class="fab fa-twitter me-1"></i>Twitter Card Tipi
                            </label>
                            <select asp-for="TwitterCard" class="form-select">
                                <option value="summary">Summary</option>
                                <option value="summary_large_image">Summary Large Image</option>
                                <option value="app">App</option>
                                <option value="player">Player</option>
                            </select>
                            <div class="form-text">Twitter'da paylaşıldığında görünecek kart tipi.</div>
                        </div>
                    </div>

                    <hr class="my-4">
                    
                    <h6 class="text-primary mb-3"><i class="fas fa-robot me-2"></i>Teknik SEO</h6>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="EnableSitemap" class="form-check-input" type="checkbox">
                                <label asp-for="EnableSitemap" class="form-check-label">
                                    <i class="fas fa-sitemap me-1"></i>Sitemap Etkin
                                </label>
                            </div>
                            <div class="form-text">XML sitemap oluşturulmasını etkinleştirir.</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="EnableRobotsTxt" class="form-check-input" type="checkbox">
                                <label asp-for="EnableRobotsTxt" class="form-check-label">
                                    <i class="fas fa-file-alt me-1"></i>Robots.txt Etkin
                                </label>
                            </div>
                            <div class="form-text">Robots.txt dosyası oluşturulmasını etkinleştirir.</div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Ayarları Kaydet
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Geri Dön
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>SEO İpuçları</h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="text-primary"><i class="fas fa-lightbulb me-1"></i>Başlık İpuçları:</h6>
                    <small>
                        • 50-60 karakter arası olmalı<br>
                        • Marka adını içermeli<br>
                        • Anahtar kelime kullanın
                    </small>
                </div>
                
                <div class="mb-3">
                    <h6 class="text-primary"><i class="fas fa-lightbulb me-1"></i>Açıklama İpuçları:</h6>
                    <small>
                        • 150-160 karakter arası olmalı<br>
                        • Açık ve net olmalı<br>
                        • Harekete geçirici olmalı
                    </small>
                </div>
                
                <div class="mb-3">
                    <h6 class="text-primary"><i class="fas fa-lightbulb me-1"></i>Anahtar Kelime İpuçları:</h6>
                    <small>
                        • Sektörünüzle ilgili olmalı<br>
                        • Uzun kuyruklu kelimeler kullanın<br>
                        • Rakip analizi yapın
                    </small>
                </div>
            </div>
        </div>

        <div class="card shadow-sm mt-3">
            <div class="card-header bg-success text-white">
                <h6 class="mb-0"><i class="fas fa-chart-line me-2"></i>SEO Durumu</h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Site Başlığı:</span>
                    <span class="badge bg-success">✓</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Meta Açıklama:</span>
                    <span class="badge bg-success">✓</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Anahtar Kelimeler:</span>
                    <span class="badge bg-success">✓</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Sosyal Medya:</span>
                    <span class="badge bg-warning">Kısmi</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Analytics:</span>
                    <span class="badge bg-secondary">Ayarlanmadı</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Karakter sayacı
        document.addEventListener('DOMContentLoaded', function() {
            const titleInput = document.getElementById('SiteTitle');
            const descInput = document.getElementById('SiteDescription');
            
            if (titleInput) {
                titleInput.addEventListener('input', function() {
                    const length = this.value.length;
                    const color = length > 60 ? 'text-danger' : length > 50 ? 'text-warning' : 'text-success';
                    const helpText = this.parentNode.querySelector('.form-text');
                    if (helpText) {
                        helpText.innerHTML = `Bu başlık tarayıcı sekmesinde görünür. <span class="${color}">(${length}/60 karakter)</span>`;
                    }
                });
            }
            
            if (descInput) {
                descInput.addEventListener('input', function() {
                    const length = this.value.length;
                    const color = length > 160 ? 'text-danger' : length > 150 ? 'text-warning' : 'text-success';
                    const helpText = this.parentNode.querySelector('.form-text');
                    if (helpText) {
                        helpText.innerHTML = `Bu açıklama arama sonuçlarında görünür. <span class="${color}">(${length}/160 karakter)</span>`;
                    }
                });
            }
        });
    </script>
}
