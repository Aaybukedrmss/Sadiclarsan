@{
    ViewData["Title"] = "Admin Panel";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>Blog Yazıları</h4>
                        <h2 id="blogCount">-</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-blog fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>İletişim Mesajları</h4>
                        <h2 id="contactCount">-</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-envelope fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>Toplam Görüntülenme</h4>
                        <h2 id="totalViews">-</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-eye fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>Okunmamış Mesaj</h4>
                        <h2 id="unreadCount">-</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-exclamation-triangle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Son Blog Yazıları</h5>
            </div>
            <div class="card-body">
                <div id="recentBlogs">
                    <div class="text-center py-4">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Yükleniyor...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Son İletişim Mesajları</h5>
            </div>
            <div class="card-body">
                <div id="recentContacts">
                    <div class="text-center py-4">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Yükleniyor...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Dashboard verilerini yükle
        document.addEventListener('DOMContentLoaded', function() {
            // Burada AJAX ile dashboard verilerini yükleyebilirsiniz
            // Şimdilik örnek veriler gösterelim
            document.getElementById('blogCount').textContent = '0';
            document.getElementById('contactCount').textContent = '0';
            document.getElementById('totalViews').textContent = '0';
            document.getElementById('unreadCount').textContent = '0';
            
            document.getElementById('recentBlogs').innerHTML = '<p class="text-muted">Henüz blog yazısı yok.</p>';
            document.getElementById('recentContacts').innerHTML = '<p class="text-muted">Henüz mesaj yok.</p>';
        });
    </script>
}
